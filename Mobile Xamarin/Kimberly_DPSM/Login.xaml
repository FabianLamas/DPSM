<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kimberly_DPSM.Login"
             Title="Login">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Frame HasShadow="True" Margin="10,10,10,0">
                <StackLayout>
                    <Entry Text="{Binding User}" Placeholder="Usuario"/>
                    <Entry Text="{Binding Pass}" IsPassword="True" Placeholder="Password"/>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Recordar usuario" VerticalTextAlignment="Center"/>
                        <Switch IsToggled="False" Visual="Material" x:Name="switch_recordar"/>
                    </StackLayout>
                    <Button Text="Ingresar" Clicked="ingresarClick" BackgroundColor="Transparent"
                            BorderColor="#075189" BorderWidth="2" CornerRadius="30"/>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
