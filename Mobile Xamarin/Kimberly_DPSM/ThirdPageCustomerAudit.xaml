<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Kimberly_DPSM.ThirdPageCustomerAudit">
    <ContentPage.Content>
        <StackLayout Margin="20">
            <StackLayout Margin="10,5,10,2" Orientation="Horizontal" HorizontalOptions="Center">

                <Label Text="Avance de Auditoria" HorizontalOptions="Start"/>
                <Label Text="25%" HorizontalTextAlignment="End"/>
            </StackLayout>

            <Button Text="D+P" x:Name="btn_DP" Clicked="dpClicked"
                    BorderColor="#075189" BackgroundColor="Transparent"
                    CornerRadius="20"
                    BorderWidth="2"/>
            <Button Text="Shelving" x:Name="btn_Shelving"
                    BorderColor="#075189" BackgroundColor="Transparent"
                    CornerRadius="20"
                    BorderWidth="2"/>
            <Button Text="Merchandising" x:Name="btn_Merchandising"
                    BorderColor="#075189" BackgroundColor="Transparent"
                    CornerRadius="20"
                    BorderWidth="2"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
